<div class="form">
    <%= render partial: "layouts/errors", locals: {object: @veterinarian} %>

    <%= form_for @veterinarian do |f| %>

        <div class="field<%= ' field_with_errors' if @veterinarian.errors[:name].any? %>">
            <%= f.label :name, "Name:" %>
            <%= f.text_field :name %>
        </div>

        <%= f.submit %>
    <% end %>
</div>