<div class="form">
    <%= form_for :user do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, required: true %><br>

        <%= f.label :password %>
        <%= f.password_field :password, required: true %><br>

        <%= f.submit "Log In" %>
    <% end %><br>

    <%= link_to('Log in with Google', '/auth/google_oauth2', class: "btn") %>
</div>