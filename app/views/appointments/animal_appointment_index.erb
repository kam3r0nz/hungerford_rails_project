<%= link_to "Schedule Appointment", new_appointment_path %>

<% if @appointments.empty? %>
    <p><%= @animal.name %> has no scheduled appointments.</p>
<% else %>
    <h3><%= @animal.name %>'s Appointments</h3>
    <% @appointments.each do |apt| %>
        <p><%= link_to "#{apt.date.strftime("%m/%d/%Y")} - #{apt.service.name} with #{apt.veterinarian.name}", appointment_path(apt) %></p>
    <% end %>
<% end %>