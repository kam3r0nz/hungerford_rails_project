<%= form_for @appointment do |f| %>
    <%= f.label :date %>
    <%= f.datetime_local_field :date %><br>

    <%= f.label :animal %>
    <%= f.collection_select :animal_id, Animal.all, :id, :name %><br>

    <%= f.label :veterinarian %>
    <%= f.collection_select :veterinarian_id, Veterinarian.all, :id, :name %><br>

    <%= f.label :service %>
    <%= f.collection_select :service_id, Service.all, :id, :name %><br>

    <%= f.submit %>
<% end %>