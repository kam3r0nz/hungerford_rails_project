<div class="form">
    <%= render partial: "layouts/errors", locals: {object: @user} %>

    <%= form_for @user do |f| %>

        <div class="field<%= ' field_with_errors' if @user.errors[:name].any? %>">
            <%= f.label :name, "Name:" %>
            <%= f.text_field :name %>
        </div>

        <div class="field<%= ' field_with_errors' if @user.errors[:email].any? %>">
            <%= f.label :email, "Email:" %>
            <%= f.email_field :email %>
        </div>

        <div class="field<%= ' field_with_errors' if @user.errors[:password].any? %>">
            <%= f.label :password, "Password:" %>
            <%= f.password_field :password %>
        </div>

        <%= f.check_box :admin, {}, "true", "false" %>
        <%= f.label :admin, "Admin?" %><br>

        <%= f.submit "Sign Up" %>
    <% end %>
</div>